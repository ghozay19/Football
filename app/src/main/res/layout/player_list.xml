<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="8dp">


        <ImageView
            android:id="@+id/ivPlayerPicture"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tvPlayerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Nama Pemain"
            android:layout_toEndOf="@id/ivPlayerPicture"
            android:fontFamily="casual"/>


        <TextView
            android:id="@+id/tvPlayerPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="PlayerPosition"
            android:layout_below="@id/tvPlayerName"
            android:layout_toRightOf="@id/ivPlayerPicture"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>